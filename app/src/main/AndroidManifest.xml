<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fefuproject.learningassistant">

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.mainapp.fragments.materials.fragment.TheoryActivity"
            android:label="@string/title_activity_theory"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.mainapp.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.view.LoginActivity"></activity>
    </application>

</manifest>